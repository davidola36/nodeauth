doctype html
html
    head
        title= NodeAuth
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(href='/stylesheets/style.css', rel='stylesheet')
        link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    body
     nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='#') NodeAuth
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item(class=(title == 'Members' ? 'active' : ''))
            a.nav-link(href='/')
              | Members 
              span.sr-only
          li.nav-item(class=(title == 'Register' ? 'active' : ''))
            a.nav-link(href='/users/register')
              | Register
          li.nav-item(class=(title == 'Login' ? 'active' : ''))
            a.nav-link(href='/users/login')
              | Log In
        ul.nav.navbar-nav.navbar-right
            li
                a(href='/users/logout') Logout
     .container
         block content
    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="/javascripts/bootstrap.js")
